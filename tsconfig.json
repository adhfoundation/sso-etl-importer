{
  "compilerOptions": {
    "target": "ES2020",
     "module": "CommonJS",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@prisma/*": ["generated/prisma/*"],
      "@app/*": ["app/*"],
      "@services/*": ["services/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "apoio", "old"]
}
